@using tp10.Models
@using System.Security.Claims
@model List<Tablero>

<h2>Listado de Tableros</h2>

<a asp-action="Crear" asp-route-id="">Crear Nuevo Tablero</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            
            <th>Descripci√≥n</th>
            <th>Id Usuario</th>
            <th>Tareas asociadas al tablero</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {   
            <tr>
                <td>@tablero.Id</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>@tablero.IdUsuarioPropietario</td>
                <td>
                    <a asp-controller="Tarea" asp-action="TareasAsociadas" asp-route-id="@tablero.Id">Ver Tareas</a>
                </td>
                <td>
                    <a asp-action="Modificar" asp-route-id="@tablero.Id">Modificar</a>
                    <a asp-action="Eliminar" asp-route-id="@tablero.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
