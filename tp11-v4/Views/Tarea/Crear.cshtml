@using tp10.Models
@model Tarea

<h2>Crear Tarea</h2>

<form asp-action="Crear" method="post">

    <div class="form-group">
        <label asp-for="IdTablero">Tablero</label>
        <input asp-for="IdTablero" class="form-control"/>
        <span asp-validation-for="IdTablero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Id">Usuario</label>
        <input asp-for="IdUsuarioAsignado" class="form-control"/>
        <span asp-validation-for="IdUsuarioAsignado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

