@model tp10.ViewModels.ListarUsuariosViewModel

<h2>Listado de Usuarios</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre de Usuario</th>
            <th>Rol</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.ListaUsuarios)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.NombreDeUsuario</td>
                <td>@usuario.Rol</td>

                <td><a asp-controller="Usuario" asp-action="UpdateUsuario" asp-route-id="@usuario.Id"
                        class="btn btn-outline-primary">Modificar</a></td>

                <td><a asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-id="@usuario.Id"
                        class="btn btn-outline-danger"
                        onclick="return confirm('Â¿Estas seguro que quieres eliminar el tablero?')">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Usuario" asp-action="CrearUsuario" class="btn btn-outline-dark margin" role="button">Nuevo Usuario</a>