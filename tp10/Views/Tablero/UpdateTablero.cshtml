@model tp10.ViewModels.ModificarTableroViewModel

@* @Model.Id *@

<section class="section_forms">
    <form asp-action="UpdateTablero" method="post">
        <h2>Modificar Tablero</h2>

        <div class="form-group mb-3">
            <input asp-for="@Model.Id" class="form-control" hidden />
        </div>

        @if (Model.EsAdmin)
        {
            <div class="form-group mb-3">
                <label asp-for="@Model.IdUsuarioPropietario"></label>
                <select asp-for="@Model.IdUsuarioPropietario" class="form-select">
                    <option value="" selected> - - - </option>
                    @foreach (var u in @Model.ListaUsuarios)
                    {
                        <option value="@u.Id">@u.NombreDeUsuario</option>
                    }
                </select>
                <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
            </div>
        }
        else
        {
            <input asp-for="@Model.IdUsuarioPropietario" class="form-control" hidden />
        }


        <div class="form-group">
            <label asp-for="@Model.Nombre"></label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Descripcion"></label>
            <input asp-for="@Model.Descripcion" class="form-control" />
            <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    </form>
</section>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}