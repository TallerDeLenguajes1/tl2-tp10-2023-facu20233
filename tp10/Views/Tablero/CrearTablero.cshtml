@model tp10.ViewModels.CrearTableroViewModel

@* @Model.Descripcion *@

<h2>Crear Tablero</h2>

<form asp-action="CrearTablero" method="post">
    @*IdUsuarioPropietario sin select *@
    @* <div class="form-group">
    <label asp-for="@Model.IdUsuarioPropietario"></label>
    <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
    <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
    </div> *@

    @*IdUsuarioPropietario con select *@
    <div class="form-group mb-3">
        <label asp-for="@Model.IdUsuarioPropietario"></label>
        <select asp-for="@Model.IdUsuarioPropietario" class="form-select">
            <option value="" selected> - - - </option>
            @foreach (var u in @Model.ListaUsuarios)
            {
                <option value="@u.Id">@u.NombreDeUsuario</option>
            }
        </select>
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <textarea asp-for="@Model.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
