@model tp10.ViewModels.ListarTareasViewModel

<h2>Listado de Tareas</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Color</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.ListaTareas)
        {
            <tr>
                <td>@tarea.Id</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td>@tarea.Estado</td>
                <td>
                    <a asp-action="Modificar" asp-route-id="@tarea.Id">Modificar</a> |
                    <a asp-action="Eliminar" asp-route-id="@tarea.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
